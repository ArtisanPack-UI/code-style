{
  "name": "artisanpack-ui/code-style",
  "description": "A custom PHP code style standard based on PHPStorm settings. This package provides custom sniffs for PHP_CodeSniffer that enforce consistent code style across your PHP projects.",
  "type": "phpcodesniffer-standard",
  "license": "GPL-3.0-or-later",
  "version": "1.0.5",
  "autoload": {
    "psr-4": {
      "ArtisanPackUI\\sniffs\\": "src/ArtisanPackUI/Sniffs/",
      "ArtisanPackUI\\Laravel\\": "src/ArtisanPackUI/Laravel/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Jacob Martella",
      "email": "me@jacobmartella.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "require-dev": {
    "pestphp/pest": "^3.8",
    "pestphp/pest-plugin-laravel": "^3.1"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "extra": {
    "phpcodesniffer-standard": "ArtisanPackUIStandard",
    "laravel": {
      "providers": [
        "ArtisanPackUI\\Laravel\\CodeStyleServiceProvider"
      ]
    }
  }
}
